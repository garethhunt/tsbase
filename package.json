{
  "name": "tsbase",
  "version": "0.0.1",
  "description": "Typescript and node starter project using Ava for testing",
  "main": "index.js",
  "author": "Gareth Hunt",
  "license": "MIT",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@tsconfig/node16": "^1.0.2",
    "@types/node": "^16.11.7",
    "ava": "^4.1.0",
    "typescript": "^4.6.2",
    "xo": "^0.48.0"
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "dist": "tsc --project tsconfig.dist.json",
    "test": "xo && ava"
  },
  "ava": {
    "files": [
      "test/**/*.spec.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": ".build/src/",
        "test/": ".build/test/"
      },
      "compile": false
    }
  },
  "xo": {
    "space": true,
    "rules": {
      "import/extensions": ["error", "always", { "ts": "never" }]
    }
  }
}
